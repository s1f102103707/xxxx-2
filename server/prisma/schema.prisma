datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String @id @default(uuid())
  email String @unique
  name  String
  tasks Task[]
}

model Task {
  id      Int     @id @default(autoincrement())
  title   String
  content String?
  userId  String
  user    User    @relation(fields: [userId], references: [id])
}
