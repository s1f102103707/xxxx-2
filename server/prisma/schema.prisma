datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String       @id @default(uuid())
  email       String       @unique
  name        String
  teams       Team[]
  playerStats PlayerStat[]
}

model Team {
  id        String     @id @default(uuid())
  name      String
  players   User[]
  teamStats TeamStat[]
}

model PlayerStat {
  id             String @id @default(uuid())
  userId         String
  battingAverage Float
  homeRuns       Int
  runsBattedIn   Int
  stolenBases    Int
  user           User   @relation(fields: [userId], references: [id])
}

model TeamStat {
  id     String @id @default(uuid())
  teamId String
  wins   Int
  losses Int
  ties   Int
  team   Team   @relation(fields: [teamId], references: [id])
}
