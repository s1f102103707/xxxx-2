{
  "openapi": "3.0.0",
  "info": {
    "title": "Baseball-like Web Service API",
    "version": "1.0.0",
    "description": "API for a web service that provides functionality similar to managing a baseball team and player statistics."
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/api/public/teams": {
      "get": {
        "summary": "Get a list of all teams",
        "responses": {
          "200": {
            "description": "A list of teams",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Team"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/public/teams/{teamId}": {
      "get": {
        "summary": "Get a team by ID",
        "parameters": [
          {
            "name": "teamId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A team object",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Team"
                }
              }
            }
          },
          "404": {
            "description": "Team not found"
          }
        }
      }
    },
    "/api/private/teams": {
      "post": {
        "summary": "Create a new team",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TeamCreateInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Team created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Team"
                }
              }
            }
          }
        }
      }
    },
    "/api/private/teams/{teamId}": {
      "put": {
        "summary": "Update a team by ID",
        "parameters": [
          {
            "name": "teamId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TeamUpdateInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Team updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Team"
                }
              }
            }
          },
          "404": {
            "description": "Team not found"
          }
        }
      },
      "delete": {
        "summary": "Delete a team by ID",
        "parameters": [
          {
            "name": "teamId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Team deleted"
          },
          "404": {
            "description": "Team not found"
          }
        }
      }
    },
    "/api/private/teams/{teamId}/stats": {
      "get": {
        "summary": "Get team statistics by team ID",
        "parameters": [
          {
            "name": "teamId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Team statistics",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TeamStat"
                }
              }
            }
          },
          "404": {
            "description": "Team not found"
          }
        }
      }
    },
    "/api/private/players": {
      "post": {
        "summary": "Create a new player",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PlayerCreateInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Player created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/api/private/players/{playerId}": {
      "put": {
        "summary": "Update a player by ID",
        "parameters": [
          {
            "name": "playerId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PlayerUpdateInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Player updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "Player not found"
          }
        }
      },
      "delete": {
        "summary": "Delete a player by ID",
        "parameters": [
          {
            "name": "playerId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Player deleted"
          },
          "404": {
            "description": "Player not found"
          }
        }
      }
    },
    "/api/private/players/{playerId}/stats": {
      "get": {
        "summary": "Get player statistics by player ID",
        "parameters": [
          {
            "name": "playerId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Player statistics",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PlayerStat"
                }
              }
            }
          },
          "404": {
            "description": "Player not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "email",
          "name"
        ]
      },
      "Team": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "name"
        ]
      },
      "PlayerStat": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "userId": {
            "type": "string"
          },
          "battingAverage": {
            "type": "number"
          },
          "homeRuns": {
            "type": "integer"
          },
          "runsBattedIn": {
            "type": "integer"
          },
          "stolenBases": {
            "type": "integer"
          }
        },
        "required": [
          "id",
          "userId",
          "battingAverage",
          "homeRuns",
          "runsBattedIn",
          "stolenBases"
        ]
      },
      "TeamStat": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "teamId": {
            "type": "string"
          },
          "wins": {
            "type": "integer"
          },
          "losses": {
            "type": "integer"
          },
          "ties": {
            "type": "integer"
          }
        },
        "required": [
          "id",
          "teamId",
          "wins",
          "losses",
          "ties"
        ]
      },
      "TeamCreateInput": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        },
        "required": [
          "name"
        ]
      },
      "TeamUpdateInput": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        },
        "required": [
          "name"
        ]
      },
      "PlayerCreateInput": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        },
        "required": [
          "email",
          "name"
        ]
      },
      "PlayerUpdateInput": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        },
        "required": [
          "email",
          "name"
        ]
      }
    }
  }
}